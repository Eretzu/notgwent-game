{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": false,
		"jsx": "preserve",
		"importHelpers": true,
		"noEmit": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"baseUrl": ".",
		"types": [
			"webpack-env"
		],
		"paths": {
			"@/*": [
				"src/*"
			],
			"@shared/*": [
				"../shared/src/*"
			]
		},
		"lib": [
			"es2019",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"tests/**/*.ts",
		"tests/**/*.tsx"
	],
	"exclude": [
		"node_modules"
	]
}
